<?xml version="1.0"?>
<rss version="2.0">
  <channel>
    <title>PhotoLog by Aleksadar Diklic</title>
    <link><%= @homeurl%></link>
    <description>Photo blog by Aleksadar Diklic, enjoy and share photos.</description>
    <category>Photography</category>
    <% @album[:photos].sort_by! { |photo| photo[:published] }.reverse.each_with_index do |photo|%>
      <item>
        <title><%= photo[:title] %></title>
        <link><%= @homeurl %></link>
        <description>
        <a href="<%= @homeurl %>" rel="lightbox[blog]"><img src='<%= PicasaAPI::url_for_dimension(photo[:src], "600") %>' alt="<%= photo[:title] %>"></img></a>
        </description>
        <pubDate><%= photo[:published].to_s %></pubDate>
      </item>
    <% end %>
  </channel>
</rss>